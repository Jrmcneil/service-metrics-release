#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/service-metrics
LOG_DIR=/var/vcap/sys/log/service-metrics
PKG_DIR=/var/vcap/packages/metron_agent
JOB_DIR=/var/vcap/jobs/service-metrics

PIDFILE=$RUN_DIR/metron_agent.pid

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "MetronAgent"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    chown -R vcap:vcap $LOG_DIR

    echo $$ > $PIDFILE

    ${PKG_DIR}/syslog_daemon_config/setup_syslog_forwarder.sh ${JOB_DIR}/config

    <% p("metron_agent.debug") == true ? debug_string = "--debug " : debug_string = "" %>

    exec chpst -u vcap:vcap ${PKG_DIR}/metron <%= debug_string %> \
    --config ${JOB_DIR}/config/metron_agent.json \
         >>$LOG_DIR/metron_agent.stdout.log \
         2>>$LOG_DIR/metron_agent.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE 40

    ;;

  *)
    echo "Usage: metron_agent_ctl {start|stop}"

    ;;

esac
