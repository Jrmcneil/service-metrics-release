#!/bin/bash -e

JOB_DIR=/var/vcap/jobs/service-metrics
INIT_LOG_DIR=/var/vcap/sys/log/service-metrics

ensure_dir() {
  local dir=$1
  mkdir -p "${dir}"
  find -L "${dir}" | grep -v "packages" | xargs chown vcap:vcap
  chmod 750 "${dir}"
}

main() {
  ensure_dir "${JOB_DIR}"
  ensure_dir "${INIT_LOG_DIR}"
}

main
