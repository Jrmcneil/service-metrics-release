check process metron_agent
  with pidfile /var/vcap/sys/run/service-metrics/metron_agent.pid
  start program "/var/vcap/jobs/service-metrics/bin/metron_agent_ctl start"
  stop program "/var/vcap/jobs/service-metrics/bin/metron_agent_ctl stop"
  group vcap

check process service-metrics
  with pidfile /var/vcap/sys/run/service-metrics/service-metrics.pid
  start program "/var/vcap/jobs/service-metrics/bin/service_metrics_ctl start"
  stop program "/var/vcap/jobs/service-metrics/bin/service_metrics_ctl stop"
  group vcap

