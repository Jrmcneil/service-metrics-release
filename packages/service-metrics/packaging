set -eu

export GOPATH=$BOSH_INSTALL_TARGET
gopath_org=github.com/pivotal-cf-experimental
gopath_project=$gopath_org/service-metrics
mkdir -p $GOPATH/src/$gopath_org
mv service-metrics $GOPATH/src/$gopath_org/

export GOROOT=$(readlink -nf /var/vcap/packages/go)
export PATH=$GOROOT/bin:$PATH

go install $gopath_project

rm -rf ${BOSH_INSTALL_TARGET}/src ${BOSH_INSTALL_TARGET}/pkg
